<div class="px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">すべての投稿</h1>

  <% if @posts.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @posts.each do |post| %>
        <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-200 p-6">
          <h2 class="text-xl font-semibold mb-2"><%= link_to post.title, post_path(post), class: "text-blue-600 hover:underline" %></h2>
          <p class="text-gray-700 mb-4"><%= truncate(post.body, length: 150) %></p>
          
          <% if post.images.attached? %>
            <div class="mb-4">
              <% post.images.each_with_index do |image, index| %>
                <div class="relative inline-block mb-2" data-controller="image-comments image-aspect-ratio" data-image-comments-post-id-value="<%= post.id %>" data-image-comments-read-only-value="true">
                  <%= image_tag image, class: "w-full max-w-xs rounded shadow", data: { "image-comments-target": "image", "image-aspect-ratio-target": "image" } %>
                  
                  <!-- 画像上のコメントマーカー表示エリア -->
                  <div class="absolute inset-0 pointer-events-none" data-image-comments-target="markersContainer"></div>
                  
                  <!-- マーカー数表示のみ（グローバルコントロールを使用） -->
                  <div class="mt-1 flex items-center justify-center">
                    <span data-image-comments-target="markerCount" class="text-xs text-gray-500"></span>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <div class="text-sm text-gray-500">
            投稿者: <%= post.user.present? ? post.user.name : "不明" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">まだ投稿がありません。</p>
  <% end %>
</div>
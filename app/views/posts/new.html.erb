<!-- メインコンテンツ -->
<div class="p-4 lg:p-8">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-3xl font-bold text-gray-800">新規投稿を作成</h1>
      <div class="text-right">
        <p class="text-sm text-gray-600">保有コイン</p>
        <p class="text-xl font-bold text-gray-800">💰 <%= current_user.coins %></p>
      </div>
    </div>

    <%= form_with model: @post, local: true, class: "space-y-6 bg-white p-6 rounded-lg shadow-md" do |form| %>

      <% if @post.errors.any? %>
        <div class="bg-red-100 text-red-700 p-4 rounded">
          <h2 class="font-bold mb-2"><%= pluralize(@post.errors.count, "件のエラー") %>が発生しました：</h2>
          <ul class="list-disc list-inside">
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, "タイトル", class: "block text-lg font-semibold text-gray-800 mb-3" %>
        <%= form.text_field :title, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500", placeholder: "投稿のタイトルを入力" %>
      </div>

      <div>
        <%= form.label :body, "本文", class: "block text-lg font-semibold text-gray-800 mb-3" %>
        <%= form.text_area :body, rows: 4, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500", placeholder: "伝えたいことを詳しく書きましょう" %>
      </div>


      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <%= form.label :images, "画像", class: "block text-lg font-semibold text-gray-800 mb-3" %>
          <%= form.file_field :images, multiple: true, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
        </div>
        <div>
          <%= form.label :videos, "動画", class: "block text-lg font-semibold text-gray-800 mb-3" %>
          <%= form.file_field :videos, multiple: true, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
        </div>
        <div>
          <%= form.label :audios, "音声", class: "block text-lg font-semibold text-gray-800 mb-3" %>
          <%= form.file_field :audios, multiple: true, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
        </div>
      </div>

      <!-- 投稿タイプ選択 -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-800">投稿方法を選択</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="p-4 border-2 border-indigo-200 rounded-lg hover:border-indigo-400 transition-colors">
            <label class="flex items-center space-x-3 cursor-pointer">
              <%= radio_button_tag "post_type", "public", true, class: "text-indigo-600 focus:ring-indigo-500", id: "post_type_public" %>
              <div>
                <div class="font-semibold text-gray-800">公開投稿</div>
                <div class="text-sm text-gray-600">みんなに見てもらう（フィードに表示）</div>
              </div>
            </label>
          </div>
          <div class="p-4 border-2 border-green-200 rounded-lg hover:border-green-400 transition-colors">
            <label class="flex items-center space-x-3 cursor-pointer">
              <%= radio_button_tag "post_type", "private", false, class: "text-green-600 focus:ring-green-500", id: "post_type_private" %>
              <div>
                <div class="font-semibold text-gray-800">特定の人に送る</div>
                <div class="text-sm text-gray-600">選んだ人だけに直接送信</div>
              </div>
            </label>
          </div>
        </div>
      </div>

      <div class="pt-6 text-center">
        <button type="submit" id="submit-btn" class="w-full md:w-auto bg-indigo-600 hover:bg-indigo-700 text-white px-8 py-3 rounded-lg font-bold text-lg shadow-md transition-transform transform hover:scale-105">
          公開投稿する
        </button>
      </div>
    <% end %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const publicRadio = document.getElementById('post_type_public');
  const privateRadio = document.getElementById('post_type_private');
  const submitBtn = document.getElementById('submit-btn');

  function updateSubmitButton() {
    if (publicRadio.checked) {
      submitBtn.textContent = '公開投稿する';
      submitBtn.className = 'w-full md:w-auto bg-indigo-600 hover:bg-indigo-700 text-white px-8 py-3 rounded-lg font-bold text-lg shadow-md transition-transform transform hover:scale-105';
    } else if (privateRadio.checked) {
      submitBtn.textContent = '送るユーザーを選ぶ';
      submitBtn.className = 'w-full md:w-auto bg-green-600 hover:bg-green-700 text-white px-8 py-3 rounded-lg font-bold text-lg shadow-md transition-transform transform hover:scale-105';
    }
  }

  // 初期状態を設定
  updateSubmitButton();

  // ラジオボタンの変更時にボタンを更新
  publicRadio.addEventListener('change', updateSubmitButton);
  privateRadio.addEventListener('change', updateSubmitButton);
});
</script>
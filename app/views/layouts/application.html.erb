<!DOCTYPE html>
<html>
  <head>
    <title>アプリ名</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- ✅ Tailwind含むCSSはこれ1行でOK -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <%= javascript_importmap_tags %> 
  </head>

  <body>
    <% if notice %>
      <div class="notice"><%= notice %></div>
    <% end %>

    <% if alert %>
      <div class="alert"><%= alert %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
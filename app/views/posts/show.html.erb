            <%= f.submit "投稿", 
                class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors text-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

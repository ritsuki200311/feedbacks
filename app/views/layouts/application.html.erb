            case "褒める":
              tonePrefix = "素晴らしい！"
              break
            case "質問":
              tonePrefix = "興味深いですね。"
              break
            case "建設的":
              tonePrefix = "改善案として、"
              break
            case "励まし":
              tonePrefix = "頑張っていますね！"
              break
          }
          
          const newText = currentText ? `${tonePrefix} ${currentText}` : tonePrefix
          this.insertIntoCommentField(newText)
        }


<script>
function handlePostCardClick(event, postId) {
  console.log('Card clicked, target:', event.target, 'postId:', postId);

  // „É™„É≥„ÇØ„ÇÑ„Éú„Çø„É≥„Åå„ÇØ„É™„ÉÉ„ÇØ„Åï„Çå„ÅüÂ†¥Âêà„ÅØÁÑ°Ë¶ñ
  if (shouldIgnoreClick(event.target)) {
    console.log('Click ignored for:', event.target);
    return;
  }

  console.log('Navigating to post:', postId);
  window.location.href = `/posts/${postId}`;
}

// ÊäïÁ®øË©≥Á¥∞„É¢„Éº„ÉÄ„É´„ÇíË°®Á§∫„Åô„ÇãÈñ¢Êï∞
function showPostModal(postId) {
  console.log('Opening post modal for:', postId);
  // ÊäïÁ®øË©≥Á¥∞„Éö„Éº„Ç∏„Å´ÈÅ∑Áßª
  window.location.href = `/posts/${postId}`;
}

function shouldIgnoreClick(target) {
  // „ÇØ„É™„ÉÉ„ÇØ„ÇíÁÑ°Ë¶ñ„Åô„Åπ„ÅçË¶ÅÁ¥†„Çí„ÉÅ„Çß„ÉÉ„ÇØ
  const ignoredElements = ['A', 'BUTTON', 'INPUT', 'TEXTAREA', 'SELECT'];
  const ignoredClasses = ['vote-button', 'delete-button'];

  // Ë¶ÅÁ¥†„Çø„Ç§„Éó„Çí„ÉÅ„Çß„ÉÉ„ÇØ
  if (ignoredElements.includes(target.tagName)) {
    return true;
  }

  // „ÇØ„É©„ÇπÂêç„Çí„ÉÅ„Çß„ÉÉ„ÇØ
  if (target.classList && ignoredClasses.some(cls => target.classList.contains(cls))) {
    return true;
  }

  // Ë¶™Ë¶ÅÁ¥†„Çí„ÉÅ„Çß„ÉÉ„ÇØÔºàSVG„Ç¢„Ç§„Ç≥„É≥„Å™„Å©Ôºâ
  let parent = target.parentElement;
  while (parent && !parent.classList.contains('post-card')) {
    if (ignoredElements.includes(parent.tagName)) {
      return true;
    }
    if (parent.classList && ignoredClasses.some(cls => parent.classList.contains(cls))) {
      return true;
    }
    parent = parent.parentElement;
  }

  return false;
}
</script>


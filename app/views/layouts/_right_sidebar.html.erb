<!-- 右サイドバー -->
<div style="width: 400px;" class="bg-white rounded-lg shadow-sm border border-gray-200 sticky top-4 max-h-screen overflow-y-auto">
  <!-- 最近のコメント -->
  <div class="p-4 border-b border-gray-200">
    <h3 class="text-lg font-semibold text-gray-800 mb-3 flex items-center gap-2">
      <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
      </svg>
      最近のコメント
    </h3>
    
    <% if @recent_comments&.any? %>
      <div class="space-y-3">
        <% @recent_comments.first(3).each do |comment| %>
          <div class="bg-gray-50 rounded-lg p-3 hover:bg-gray-100 transition-colors">
            <div class="flex items-start gap-2">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                  <span class="text-sm font-medium text-blue-600"><%= comment.user.name.first %></span>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-1 mb-1">
                  <%= link_to comment.user.name, user_path(comment.user), class: "text-sm font-medium text-gray-900 hover:text-blue-600 truncate" %>
                  <span class="text-xs text-gray-500">
                    <%= time_ago_in_words(comment.created_at) %>前
                  </span>
                </div>
                <p class="text-sm text-gray-700 line-clamp-2 mb-1">
                  <%= truncate(comment.body, length: 60) %>
                </p>
                <% if comment.post %>
                  <%= link_to comment.post, class: "text-xs text-blue-600 hover:text-blue-800 hover:underline" do %>
                    「<%= truncate(comment.post.title, length: 20) %>」へのコメント
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-sm text-gray-500 text-center py-4">まだコメントがありません</p>
    <% end %>
  </div>

  <!-- おすすめのユーザー -->
  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-800 mb-3 flex items-center gap-2">
      <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
      </svg>
      おすすめのユーザー
    </h3>
    
    <% if @recommended_users&.any? %>
      <div class="space-y-3">
        <% @recommended_users.first(3).each do |user| %>
          <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                <span class="text-sm font-medium text-green-600"><%= user.name.first %></span>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <%= link_to user.name, user_path(user), class: "text-sm font-medium text-gray-900 hover:text-blue-600 block truncate" %>
              <p class="text-xs text-gray-500">
                投稿数: <%= user.posts.size %>件
              </p>
            </div>
            <div class="flex-shrink-0">
              <%= link_to user_path(user), class: "text-xs bg-blue-500 text-white px-2 py-1 rounded hover:bg-blue-600 transition-colors" do %>
                プロフィール
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-sm text-gray-500 text-center py-4">おすすめのユーザーがいません</p>
    <% end %>
  </div>
</div>
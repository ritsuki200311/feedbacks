  const commenterOption = document.getElementById('commenter-option');
  
  advisorTypeInputs.forEach(input => {
    input.addEventListener('change', function() {
      if (this.checked) {
        // ã‚¸ãƒ£ãƒ³ãƒ«é¸æŠã‚’è¡¨ç¤º
        genreSelection.classList.remove('hidden');
        

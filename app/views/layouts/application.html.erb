              const placeholders = {
                'è¤’ã‚ã‚‹': 'ã¨ã¦ã‚‚ç´ æ™´ã‚‰ã—ã„ä½œå“ã§ã™ã­ï¼',
                'è³ªå•': 'ã“ã‚Œã¯ã©ã®ã‚ˆã†ãªæŠ€æ³•ã§æã‹ã‚ŒãŸã®ã§ã™ã‹ï¼Ÿ',
                'å»ºè¨­çš„': 'ã“ã“ã®éƒ¨åˆ†ã‚’ã‚‚ã†å°‘ã—è©³ã—ãæ•™ãˆã¦ã„ãŸã ã‘ã¾ã™ã‹ï¼Ÿ',
                'åŠ±ã¾ã—': 'æ¬¡å›ä½œã‚‚æ¥½ã—ã¿ã«ã—ã¦ã„ã¾ã™ï¼'

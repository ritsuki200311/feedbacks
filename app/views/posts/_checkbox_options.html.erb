<div class="mt-4 checkbox-options-container">
  <p class="font-semibold mb-2"><%= title %></p>
  <div class="flex flex-wrap gap-2">
    <% options.each_with_index do |option, index| %>
      <% field_id = "#{field_name.parameterize}_#{index}" %>
      <label for="<%= field_id %>" class="tag-label inline-block px-3 py-1 border rounded-full cursor-pointer bg-gray-200 hover:bg-gray-300 transition">
        <%= check_box_tag field_name, option, selected.to_a.include?(option), id: field_id, class: "hidden" %>
        <span><%= option %></span>
      </label>
    <% end %>
  </div>
</div>

<div class="w-full mx-auto px-4 py-8 space-y-8">

  <!-- ヘッダー -->


  <!-- ユーザー情報 -->
  <div class="text-gray-700">
    <% if user_signed_in? %>
      <p><strong><%= link_to current_user.name, mypage_path, class: "text-blue-600 hover:underline" %></strong> さん</p>
      <p>保有コイン: <%= current_user.coins %></p>
<p>ランク: <%= current_user.rank %></p>
      <p>メール: <%= current_user.email %></p>
    <% else %>
      <p>ログインしていません。</p>
    <% end %>
  </div>

  <hr class="my-4">

  <!-- 投稿一覧 -->
  <h2 class="text-2xl font-semibold mb-4">投稿一覧</h2>

  <div class="mb-4 border-b border-gray-200">
    <ul class="flex flex-wrap -mb-px text-sm font-medium text-center text-gray-500">
      <li class="mr-2">
        <%= link_to "ホーム", root_path, class: "inline-block p-4 rounded-t-lg hover:border-gray-300 #{'bg-blue-600 text-white' if params[:creation_type].blank?}" %>
      </li>
      <% Post::CREATION_TYPES.each do |key, value| %>
        <li class="mr-2">
          <%= link_to key, root_path(creation_type: value), class: "inline-block p-4 rounded-t-lg hover:border-gray-300 #{'bg-blue-600 text-white' if params[:creation_type].to_s == value.to_s}" %>
        </li>
      <% end %>
    </ul>
  </div>

<% if @posts.any? %>
  <% @posts.each do |post| %>
    <div class="<%= post_card_class(post) %>">
      <h3 class="text-xl font-bold text-indigo-700 mb-2">
        <%= link_to post.title, post_path(post) %>
      </h3>

      <% if post.request_tag.present? %>
        <p class="text-sm text-gray-600 mb-2">
          <span class="bg-purple-100 text-purple-700 px-2 py-1 rounded-full"><%= post.request_tag %></span>
        </p>
      <% end %>

      <p class="text-gray-500 text-sm mb-2">
        投稿者: <%= link_to post.user.name, user_path(post.user), class: "text-indigo-600 hover:underline" %>
      </p>

      <p class="mb-4"><%= truncate(post.body, length: 100) %></p>

      <% if post.tag.present? %>
        <div class="flex flex-wrap gap-2">
          <% post.tag_list.each do |tag| %>
            <span class="bg-blue-100 text-blue-700 text-sm px-3 py-1 rounded-full font-medium"><%= tag %></span>
          <% end %>
        </div>
      <% end %>

      <% if post.images.attached? %>
        <div>
          <% post.images.each do |image| %>
            <%= image_tag image, class: "w-full max-w-sm mx-auto rounded shadow" %>
          <% end %>
        </div>
      <% end %>

      <% if post.videos.attached? %>
        <div>
          <% post.videos.each do |video| %>
            <video class="w-full max-w-md mx-auto" controls>
              <source src="<%= url_for(video) %>" type="<%= video.content_type %>">
              お使いのブラウザは video タグをサポートしていません。
            </video>
          <% end %>
        </div>
      <% end %>

      <p class="text-sm text-gray-500">コメント数: <%= post.comments.count %></p>

      <!-- コメントフォーム -->
      <div class="mt-4">
        <%= form_with model: [post, post.comments.build], url: post_comments_path(post), local: true do |form| %>
          <div>
            
            <%= form.text_area :body, rows: 2, placeholder: "コメントを追加...", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 bg-gray-50 p-2" %>
          </div>
          <div class="mt-2">
            
            <%= form.file_field :attachments, multiple: true, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
          </div>
          <div class="mt-2">
            <%= form.submit "コメントする", class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded" %>
          </div>
        <% end %>
      </div>

      <!-- 投稿削除ボタン -->
      <div class="text-right mt-2">
        <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-red-600 hover:underline" %>
      </div>
    </div>
  <% end %>

<% else %>
  <p class="text-gray-500">まだ投稿がありません。</p>
<% end %>

<!-- ✅ 開発環境限定：ここが一番下 -->
<% if Rails.env.development? %>
  <div class="bg-yellow-100 border border-yellow-400 text-yellow-800 px-4 py-3 rounded mt-8">
    <p class="font-semibold">開発者向け機能</p>
    <p class="mt-1">
      <%= link_to "開発用ユーザー情報一覧", admin_users_path, class: "underline hover:text-yellow-900" %>
    </p>
  </div>
<% end %>

</div> <!-- ← 最初の .max-w-5xl の閉じタグ -->
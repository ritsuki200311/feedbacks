              let tonedText = currentText
              switch(tone) {
                case 'è¤’ã‚ã‚‹':
                  if (!tonedText.includes('ç´ æ™´ã‚‰ã—ã„') && !tonedText.includes('è‰¯ã„')) {
                    tonedText = `ç´ æ™´ã‚‰ã—ã„ä½œå“ã§ã™ã­ï¼${tonedText}`
